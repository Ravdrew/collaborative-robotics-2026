<mujoco model="tidybot bimanual nav scene">
  <include file="tidybot_wx250s_bimanual.xml"/>

  <statistic center="0 0 0.525" extent="4" meansize="0.05"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.1 0.1 0.1" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="140" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
    <material name="wall_mat" rgba="0.7 0.7 0.65 1"/>
    <material name="obstacle_red" rgba="0.8 0.2 0.2 1"/>
    <material name="obstacle_blue" rgba="0.2 0.3 0.8 1"/>
    <material name="obstacle_green" rgba="0.2 0.7 0.3 1"/>
  </asset>

  <worldbody>
    <light pos="0 0 3" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>

    <!-- Room walls (6m x 6m room, centered at origin) -->
    <!-- North wall (+Y) -->
    <geom name="wall_north" type="box" pos="0 3 0.5" size="3 0.05 0.5" material="wall_mat"/>
    <!-- South wall (-Y) -->
    <geom name="wall_south" type="box" pos="0 -3 0.5" size="3 0.05 0.5" material="wall_mat"/>
    <!-- East wall (+X) -->
    <geom name="wall_east" type="box" pos="3 0 0.5" size="0.05 3 0.5" material="wall_mat"/>
    <!-- West wall (-X) -->
    <geom name="wall_west" type="box" pos="-3 0 0.5" size="0.05 3 0.5" material="wall_mat"/>

    <!-- Interior wall with gap (doorway) -->
    <geom name="interior_wall_left" type="box" pos="1.5 -0.8 0.5" size="0.05 0.7 0.5" material="wall_mat"/>
    <geom name="interior_wall_right" type="box" pos="1.5 1.3 0.5" size="0.05 1.7 0.5" material="wall_mat"/>

    <!-- Obstacles -->
    <body name="box1" pos="0.8 1.0 0.15">
      <geom type="box" size="0.15 0.15 0.15" material="obstacle_red"/>
    </body>
    <body name="box2" pos="-1.0 -1.2 0.2">
      <geom type="box" size="0.2 0.2 0.2" material="obstacle_blue"/>
    </body>
    <body name="cylinder1" pos="2.0 0.5 0.25">
      <geom type="cylinder" size="0.15 0.25" material="obstacle_green"/>
    </body>
    <body name="table" pos="-1.5 1.5 0.35">
      <geom name="tabletop" type="box" size="0.4 0.3 0.02" pos="0 0 0" material="wall_mat"/>
      <geom name="table_leg1" type="cylinder" size="0.03 0.35" pos="0.35 0.25 -0.35" material="wall_mat"/>
      <geom name="table_leg2" type="cylinder" size="0.03 0.35" pos="-0.35 0.25 -0.35" material="wall_mat"/>
      <geom name="table_leg3" type="cylinder" size="0.03 0.35" pos="0.35 -0.25 -0.35" material="wall_mat"/>
      <geom name="table_leg4" type="cylinder" size="0.03 0.35" pos="-0.35 -0.25 -0.35" material="wall_mat"/>
    </body>
  </worldbody>
</mujoco>
